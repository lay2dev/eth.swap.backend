{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/@nervosnetwork/ckb-types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
